extends layout

block head_content
  title Login
  script(type='text/javascript').
      var users = !{JSON.stringify(errormsg)}
      if(users != "undefined") alert("Incorrect Username/password")
      
block content
  .container-fluid.background-green 
    .row.text-center.top-buffer
      img(src='img/logo.jpg' style='width:25%')
    .row.top-buffer
      .col-md-2
      .col-md-8 
        form(action='login', method='POST')
          .form-group
            input.form-control(type='text', name='username', placeholder='Username')
            br
            input.form-control(type='password', name='password', placeholder='Password')
            
          input.form-control(type='submit', name='submit', value='LOGIN')
            
        br
        a.text-center(href='register') Create a new account
      .col-md-2    