html
  head
    title Registration
    link(rel='stylesheet', type='text/css', href='../css/style.css')
    link(rel='stylesheet', type='text/css', href='../css/font-awesome.css')
    meta(charset='UTF-8')
    script(src='js/validateRegister.js')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    #register.container
      img(src='../img/logo.jpg')
      form(name='register', action='register', method='POST', onsubmit='return validateForm()')
        .form-input
          input#firstname(type='text', name='firstname', placeholder='First name', required='')
        .form-input
          input#lastname(type='text', name='lastname', placeholder='Last name', required='')
        .form-input
          input#email(type='email', name='email', placeholder='Email id')
        .form-input
          input#username(type='text', name='username', placeholder='Username', required='')
        .form-input
          input#password(type='password', name='password', placeholder='Password', required='')
        .form-input
          input#confirm(type='password', name='confirm', placeholder='Confirm Password', required='')
        input.btn-login(type='submit', name='submit', value='CREATE ACCOUNT')
